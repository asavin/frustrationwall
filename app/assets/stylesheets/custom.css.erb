/* Frustration item UI styles */

.frust-item {
    width: 400px;
    height: auto;
    margin: 30px 50px;
    position: relative;
    display: inline-block;
}

.frust-main-container {
    background: white;
    border-radius: 3px;
    border: 1px solid #DDD;
    padding: 10px;
    min-height: 140px;
    z-index: 1;
}

.frust-love-bubble {
    background: #9E9E9E;
    border: 1px solid #AAA;
    height: 30px;
    width: 40px;
    border-radius: 3px;
    position: absolute;
    top: 15px;
    right: -41px;
    -webkit-border-radius: 0px 3px 3px 0px;
    border-radius: 0px 3px 3px 0px;
    text-align: center;
    display: none;
    background-image: url('<%= asset_path('bigger-heart.png') %>');
    background-repeat: no-repeat;
    background-position: 10%;
    background-size: 20%;
    transition: background-size 1s;
    -moz-transition: background-size 1s; /* Firefox 4 */
    -webkit-transition: background-size 1s; /* Safari and Chrome */
    -o-transition: background-size 1s; /* Opera */
    
}

.frust-comment-bubble {
    background: #9E9E9E;
    border: 1px solid #AAA;
    height: 30px;
    width: 40px;
    border-radius: 3px;
    position: absolute;
    top: 50px;
    right: -41px;
    -webkit-border-radius: 0px 3px 3px 0px;
    border-radius: 0px 3px 3px 0px;
    text-align: center;
    display: block;
    background-image: url('<%= asset_path('comment-bubble.png') %>');
    background-repeat: no-repeat;
    background-position: 10%;
    background-size: 40%;
    display: none;
}

.frust-remove-bubble {
    background: #9E9E9E;
    border: 1px solid #AAA;
    height: 30px;
    width: 40px;
    border-radius: 3px;
    position: absolute;

/* Responsive design */

@media (min-width: 1200px) { 
    .frust-item {
        width: 41%;
        margin: 30px 60px 30px 30px;
    }
}

@media (min-width: 980px) and (max-width: 1199px) {
    .frust-item {
        width: 39%;
    }
    
    .frust-comment-action {
        width: 49%;
    }
}

@media (max-width: 979px) { 
    .frust-item {
        width: 90%;
        margin: 30px 0 30px -30px;
    }
    
    .cloud-left {
        position: absolute;
        left: 50px;
        top: 20px;
        height: 100px;
        background-size: 50%;
    }
    
    .cloud-right {
        position: absolute;
        right: 50px;
        top: 20px;
        height: 100px;
        background-size: 50%;
        background-position: 100%;
    }
    
    .frust-comment-action {
        width: 49%;
    }
}

@media (max-width: 767px) {
    .cloud-left {
        display: none;
    }
    
    .cloud-right {
        display: none;
    }
    
    .frust-comment-action {
        width: 49%;
    }
    
    #frustration_content {
        width: 200px;
    }
    
    #scroll-up {
        display: none;
    }

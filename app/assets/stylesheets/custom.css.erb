 /* Sticky footer styles */
 
 html, body {
    height: 100%;
    /* The html and body elements cannot have any padding or margin. */
  }

  /* Wrapper for page content to push down footer */
  #wrap {
    min-height: 100%;
    height: auto !important;
    height: 100%;
    /* Negative indent footer by it's height */
    margin: 0 auto -40px;
  }

  /* Set the fixed height of the footer here */
  #push,
  #footer {
    height: 40px;
  }
  
  #footer {
    margin-top: 60px;
    background-color: #f5f5f5;
    color: #333;
    background-color: #666;
    text-shadow: 0px 1px 0px rgba(255,255,255,.4); /* 40% white from bottom */
    -moz-box-shadow:    inset 0 2px 6px #000000;
   -webkit-box-shadow: inset 0 2px 6px #000000;
   box-shadow:         inset 0 2px 6px #000000;
   text-align: center;
   padding-top: 15px;
  }

  /* Lastly, apply responsive CSS fixes as necessary */
  @media (max-width: 767px) {
    #footer {
      margin-left: -20px;
      margin-right: -20px;
      padding-left: 20px;
      padding-right: 20px;
    }
  }
  
/* End of sticky footer styles */


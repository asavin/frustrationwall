 /* Sticky footer styles */
 
 html, body {
    height: 100%;
    /* The html and body elements cannot have any padding or margin. */
  }

  /* Wrapper for page content to push down footer */
  #wrap {
    min-height: 100%;
    height: auto !important;
    height: 100%;
    /* Negative indent footer by it's height */
    margin: 0 auto -40px;
  }

  /* Set the fixed height of the footer here */
  #push,
  #footer {
    height: 40px;
  }
  
  #footer {
    margin-top: 60px;
    background-color: #f5f5f5;
    color: #333;
    background-color: #666;
    text-shadow: 0px 1px 0px rgba(255,255,255,.4); /* 40% white from bottom */
    -moz-box-shadow:    inset 0 2px 6px #000000;
   -webkit-box-shadow: inset 0 2px 6px #000000;
   box-shadow:         inset 0 2px 6px #000000;
   text-align: center;
   padding-top: 15px;
  }

  /* Lastly, apply responsive CSS fixes as necessary */
  @media (max-width: 767px) {
    #footer {
      margin-left: -20px;
      margin-right: -20px;
      padding-left: 20px;
      padding-right: 20px;
    }
  }
  
/* End of sticky footer styles */

.jumbotron {
    margin: 60px 0;
    text-align: center;
}

#new_frustration_form {
    background: #AAA;
    margin-left: -20px;
    margin-right: -20px;
    box-shadow: inset 0px 2px 8px 0px rgba(0, 0, 0, 0.4);
    display: none;
}

#new_frustration_form input[type="submit"] {
    margin-bottom: 20px;
}

#frustration_content {
    width: 300px;
    margin: 20px 0;
}

.characters_left {
    margin-left: 10px;
    color: #fff;
    font-size: 1em;
}

/* Frustration item UI styles */

.frust-item {
    width: 400px;
    height: auto;
    margin: 30px;
    position: relative;
}

.frust-main-container {
    background: white;
    border-radius: 3px;
    border: 1px solid #DDD;
    padding: 10px;
    min-height: 140px;
    z-index: 1;
}

.frust-love-bubble {
    background: #9E9E9E;
    border: 1px solid #AAA;
    height: 50px;
    width: 50px;
    border-radius: 3px;
    position: absolute;
    top: 15px;
    right: -51px;
    -webkit-border-radius: 0px 3px 3px 0px;
    border-radius: 0px 3px 3px 0px;
    text-align: center;
}

.frust-actions {
    width: 100%;
    background: white;
    height: 35px;
    position: absolute;
    bottom: 0;
    right: 0;
}

.frust-love-action {
    width: 49%;
    background: #9E9E9E;
    height: 100%;
    display: inline-block;
    border-radius: 0px 0px 0px 3px;
    background-image: url('<%= image_path('heart_grey_30.png') %>');
    background-repeat: no-repeat;
    background-position: center;
}

.frust-love-action:hover {
    background: #ADADAD;
    background-image: url('<%= image_path('heart_grey_30.png') %>');
    background-repeat: no-repeat;
    background-position: center;
    -webkit-transition: background 0.3s;
   -moz-transition: background 0.3s;
   -o-transition: background 0.3s;
}

.frust-comment-action {
    display: inline-block;
    width: 50%;
    height: 100%;
    background: #9E9E9E;
    border-radius: 0px 0px 3px 0px;
    background-image: url('<%= image_path('text-stripes-light.png') %>');
    background-repeat: no-repeat;
    background-position: center;
}

.love-bubble-icon {
    position: absolute;
    left: 14px;
    top: 5px;
}

.love-bubble-count {
    position: absolute;
    top: 30px;
    color: white;
    font-size: 0.8em;
}

.big-love {
    background: #444;
    height: 100%;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    border-radius: 3px;
    opacity: 0.5;
    text-align: center;
    display: none;
}

.big-love img {
    margin-top: 30px;
}

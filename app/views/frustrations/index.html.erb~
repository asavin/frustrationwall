    <script>
        $('.frust-love-action').click(function(e){
            e.preventDefault();
            count = parseInt($('.love-bubble-count').text(), 10) + 1
            $('.love-bubble-count').text(count)
            $('.big-love').fadeIn().delay(300).fadeOut();
        });
    </script>
